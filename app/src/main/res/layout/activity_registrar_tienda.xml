<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="piete.lidltransportista.registrarTienda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nombreTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/numeroTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Numero"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/muelleFrio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Muelle Frio"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/FilaMuelleFrio"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fila"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/muelleFruta"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Muelle Fruta"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/FilaMuelleFruta"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fila"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/muelleseco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Muelle Seco"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/FilaMuelleSeco"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fila"
                android:inputType="textPersonName" />
        </LinearLayout>

        <EditText
            android:id="@+id/direccionTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Direccion"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/numTelfTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Número Teléfono"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/anadirTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/atras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atras"
            android:onClick="onClick"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
